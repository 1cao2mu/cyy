<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hhstu.cyy.cyy.activity.LinearLayoutActivity">

    <include layout="@layout/include_view_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_height_1"
        android:orientation="vertical"
        android:showDividers="end">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/brown"
            android:text="View"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/brown"
            android:text="RatingBar"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_height_1"
        android:orientation="vertical"
        android:showDividers="middle">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/brown"
            android:text="TextView"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/brown"
            android:text="LinearLayout+divider"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_height_1"
        android:orientation="vertical"
        android:showDividers="beginning">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/brown"
            android:text="TextView"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/brown"
            android:text="LinearLayout+divider"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_width_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="beginning">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/brown"
            android:text="View"
            android:textAllCaps="false" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/brown"
            android:text="RatingBar"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_width_1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/brown"
                android:text="TextView"
                android:textAllCaps="false" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/brown"
                android:text="LinearLayout+divider"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
