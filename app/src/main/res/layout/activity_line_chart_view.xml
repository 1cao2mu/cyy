<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_line_chart_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hhstu.cyy.cyy.activity.chart.LineChartViewActivity">

    <include layout="@layout/include_view_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.hhstu.cyy.cyy.activity.chart.SimpleLineChart
            android:id="@+id/simpleLineChart"
            android:layout_width="@dimen/x1000"
            android:layout_height="@dimen/x1000"
            android:layout_marginTop="@dimen/x50" />

        <SeekBar
            android:id="@+id/sb"
            android:layout_width="@dimen/x1000"
            android:max="1080"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sb_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
